{
  "devDependencies": {
    "electron": "^35.1.3",
    "inquirer": "^12.5.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.8.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:buddy": "pnpm build:buddy-types && pnpm --filter buddy build",
    "build:buddy-types": "pnpm --filter buddy-types build",
    "dev": "pnpm dev:buddy",
    "dev:buddy": "pnpm --filter buddy dev",
    "ext": "nodemon pipeline.mjs",
    "mcp": "pnpm --filter mcp-core test",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "electron-log": "^5.3.2",
    "source-map-support": "^0.5.21"
  }
}
